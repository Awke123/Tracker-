{
  "name": "habit-tracker-backend",
  "version": "1.0.0",
  "description": "Backend для Telegram Mini App - Трекер привычек",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node -e \"const fs=require('fs'); const p='src/db/migrations'; if(fs.existsSync(p)) fs.cpSync(p,'dist/db/migrations',{recursive:true});\"",
    "start": "node dist/index.js",
    "migrate": "node -r ts-node/register ./src/db/migrate.ts",
    "migrate:up": "node -r ts-node/register ./src/db/migrate.ts up",
    "migrate:down": "node -r ts-node/register ./src/db/migrate.ts down",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@tma.js/init-data-node": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.4"
  }
}
